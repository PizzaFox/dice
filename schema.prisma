generator client {
  provider = "prisma-client-js"
}

datasource postgres {
  provider = "postgresql"
  url      = env("POSTGRES_URI")
}

model User {
  balance         Decimal   @default(1000)
  blacklistReason String?
  dailyUsed       DateTime?
  id              String    @id
}

model Guild {
  id            String                 @id
  prefix        String?
  selfRoles     String[]
  notifications NotificationSettings[]
  tags          Tag[]
}

model Tag {
  author  String
  content String
  guildId String
  id      String
  guild   Guild  @relation(fields: [guildId], references: [id])

  @@id([id, guildId])
}

model NotificationSettings {
  channels String[]
  guildId  String
  id       NotificationType
  guild    Guild            @relation(fields: [guildId], references: [id])

  @@id([id, guildId])
}

enum NotificationType {
  BAN_UNBAN
  GUILD_MEMBER_JOIN_LEAVE
  VOICE_CHANNEL
  GUILD_MEMBER_UPDATE
  USER_ACCOUNT_BIRTHDAY
  MESSAGE_DELETE
  MESSAGE_UPDATE
}
