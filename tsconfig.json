{
	"compilerOptions": {
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": false,
		"inlineSources": true,
		"module": "commonjs",
		"moduleResolution": "node",
		"outDir": "tsc_output",
		"resolveJsonModule": true,
		"sourceMap": true,
		"sourceRoot": "/",
		"strict": true,
		"target": "es2019"
	},
	"exclude": ["node_modules", "src/**.test.*"],
	"include": ["src", "types"]
}
